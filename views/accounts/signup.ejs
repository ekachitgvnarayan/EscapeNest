<%-layout("/layouts/boilerplate")%>
<body>
    <div class="mt-3 row">
        <h3 class="offset-3">Signup to EscapeNest:</h3>
        <div class="col-4 offset-4">
            <form method="post" action="/account/signup" class="needs-validation" novalidate>
                <div class="m-3">
                    <label for="username" class="form-label">Username:</label>
                    <input id="username" placeholder="This is displayed on your account" class="form-control" 
                        name="username" type="text" required>
                    <!-- <div class="valid-feedback">
                        Looks good!
                    </div> -->
                    <div class="invalid-feedback">
                        Username should be valid
                    </div>
                </div>
                <div class="m-3">
                    <label for="email" class="form-label">Email:</label>
                    <input id="email" placeholder="yourmail@example.com" class="form-control" 
                        name="email" type="email" required>
                    <!-- <div class="valid-feedback">
                        Looks good!
                    </div> -->
                    <div class="invalid-feedback">
                        Enter a valid email
                    </div>
                </div>
                <div class="m-3">
                    <label for="password" class="form-label">Password:</label>
                    <input id="password" placeholder="Enter Password" class="form-control" 
                    aria-describedby="passwordHelpBlock" name="password" type="password" required>
                    <!-- <div class="valid-feedback">
                        Looks good!
                    </div> -->
                    <div class="invalid-feedback">
                        Enter a valid password
                    </div>
                    <div id="passwordHelpBlock" class="form-text">
                        Your password must be 8-20 characters long, contain letters and numbers,
                         and must not contain spaces, special characters, or emoji.
                    </div>
                </div>
                <button class="btn m-3 btn-outline newpage-button">Signup</button>
            </form>
        </div>
    </div>
</body>
<%-layout("/layouts/boilerplate")%>
<style>
    #filters{
        display: flex;
        flex-wrap: wrap;
        padding: 10px;
        padding-bottom: 0px;
        background-color: #fff;
        padding-left: 20px;
        justify-content: center;
    }
    .filter{
        text-align: center;
        margin-right: 2rem;
        cursor: pointer;
        opacity: 0.7;
        border-bottom: 2px solid transparent;
    }
    .filter:hover{
          opacity: 1;
          border-bottom: 2px solid black;
    }
    .filter p{
        font-size: 0.8rem;
        margin-top: 5px;
        font-weight:600;}
</style>
<body>
    <!-- <h3>All Listings</h3> -->
    <div id="filters">
        <div class="filter">
            <div><i class="fa-brands fa-gripfire"></i></div>
            <p>Trending</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-umbrella-beach"></i></div>
            <p>Beach</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-city"></i></div>
            <p>Iconic Cities</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-wheat-awn"></i></div>
            <p>Farms</p>
        </div><div class="filter">
            <div><i class="fa-solid fa-house-flood-water"></i></div>
            <p>LakeFront</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            <p>Amazing Pools</p>
        </div>
        <div class="filter">
            <div><i class="fa-brands fa-space-awesome"></i></div>
            <p>OMG!</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-dog"></i></div>
            <p>Pet Friendly</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-mountain-city"></i></div>
            <p>Iconic Cities</p>
        </div>
        <div class="filter">
            <div><i class="fa-brands fa-fort-awesome"></i></div>
            <p>Castles</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-tents"></i></div>
            <p>Camping</p>
        </div>
    </div>
    <div class="index-listings-div mt-3">
        <%for(item of data){%>
            <a href="/listings/<%=item._id%>" class="listing-link">
        <div class="card index-cards">
            <img src="<%= item.image.url%>" class="card-img-top" alt="...">
            <div class="card-img-overlay"></div>
            <div class="card-body">
                <h5 class="card-title"><%=item.title%></h5>
                <p class="card-text">&#x20B9;<%=item.price.toLocaleString("en-IN")%> / Night</p>
            </div>
        </div>
            <br><br>
            </a>
        <%}%>
    </div>
</body>